      <dd><%= message %></dd>
      <% end %>
    </dl>
  </div>
  <div id="estoque"  class="tab-pane fade">
    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:crawler) %>:</strong></dt>
      <dd><%= link_to @crawler_log.crawler.wordpress.name, crawler_path(@crawler_log.crawler) %></dd>
